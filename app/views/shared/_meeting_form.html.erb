<%= form_for(@meeting) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class='field'>
      <%= f.label :name %>
      <%= f.text_area :name%>

      <%= f.label :email %>
      <%= f.text_area :email %>

      <%= f.label :phone %>
      <%= f.text_area :phone %>

      <%= f.label :meeting_type %>
      <%= f.select :meeting_type, options_for_select([['Coffee','coffee'],['Beer','beer'],['Other','other']]) %>

      <%= f.submit "Join our Trip!", class: "btn btn-large btn-primary" %>
    </div>
<% end %>